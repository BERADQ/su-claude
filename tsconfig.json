{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "es2020",
    "module": "CommonJS",
    "declaration": true,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "jsx": "react-jsx",
    "jsxImportSource": "@satorijs/element"
  },
  "include": ["src"]
}
